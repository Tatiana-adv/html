<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Validação de Números</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    .mensagem { margin-top: 10px; font-weight: bold; }
    .positivo { color: green; }
    .negativo { color: red; }

    /* Estilos para validação visual */
    input {
      padding: 5px;
      border: 2px solid #ccc;
      border-radius: 4px;
      outline: none;
    }

    .valido {
      border-color: green;
    }

    .invalido {
      border-color: red;
    }
  </style>
</head>
<body>
  <h1>Comparador de Números</h1>
  <form id="formNumeros">
    <label for="campoA">Campo A:</label>
    <input type="number" id="campoA" required><br><br>

    <label for="campoB">Campo B:</label>
    <input type="number" id="campoB" required><br><br>

    <button type="submit">Comparar</button>
  </form>

  <div id="mensagem" class="mensagem"></div>

  <script>
    const form = document.getElementById("formNumeros");
    const mensagem = document.getElementById("mensagem");
    const campoAInput = document.getElementById("campoA");
    const campoBInput = document.getElementById("campoB");

    form.addEventListener("submit", function(event) {
      event.preventDefault();

      const campoA = Number(campoAInput.value);
      const campoB = Number(campoBInput.value);

      if (campoB > campoA) {
        mensagem.textContent = "Formulário válido: B é maior que A.";
        mensagem.className = "mensagem positivo";
        campoAInput.classList.remove("invalido");
        campoBInput.classList.remove("invalido");
        campoAInput.classList.add("valido");
        campoBInput.classList.add("valido");
      } else {
        mensagem.textContent = "Formulário inválido: B deve ser maior que A.";
        mensagem.className = "mensagem negativo";
        campoAInput.classList.remove("valido");
        campoBInput.classList.remove("valido");
        campoAInput.classList.add("invalido");
        campoBInput.classList.add("invalido");
      }
    });
  </script>
</body>
</html>
